<% layout("/layouts/layout.ejs") %>
<title>Enter Location</title>
<body>
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card p-4 shadow-sm rounded" style="background-color: white; border-radius: 10px; width: 90%; max-width: 600px;">
            <h3 class="text-center mb-4">Enter Location</h3>
            <form action="/submit-location" method="POST" class="d-flex flex-column">
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" id="location" name="name" class="form-control w-100" required>
                </div>

                <button type="submit" class="btn btn-dark w-50 mx-auto" style="border-radius: 10px; font-size: 0.9rem; font-weight: bold;">
                    Submit
                </button>
            </form>
        </div>
    </div>
</body>
</html>
